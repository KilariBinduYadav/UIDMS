                        <a href="#" class="navbar-brand">
                            <img src="/images/ind_flag.jpg" height="60" alt="Flag">
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </div> 
    <form method="post" action="/successDownload">
        <section class="py-5">
            <div class="container">

                <div id = "card" class="card" style="width: 50%; height: 100%; border-color: #000080;">
                    <div class="card-body" >
                      <h5 class="card-title">Unique Identity of India</h5>
                      <h2>Name: <%= name %></h2>
                      <h2>DOB: <%= dob %></h2>
                      <h2>Gender: <%= gender %></h2>
                      <h2 style="margin-left: 0 auto;"><%= uniqueid %></h2>

                    </div>
                </div>
                 <br><br>
                 <h5 id="download" onclick="download()" class="btn btn-warning btn-lg ms-2" style="margin-left: 80%;">Download</h5>

            </div>
        </section>
    </form>
</body>
</html>